<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="6dp"
    android:layout_gravity="center"
    >
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_completed" />

        <TextView
            android:id="@+id/textView"
            style="@style/DosisBold32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:text="@string/bravo"
            android:textColor="@color/textColorPrimary" />

        <TextView
            android:id="@+id/tvChallengeCompleted"
            style="@style/DosisBold14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:text="@string/challenge_completed"
            android:textColor="@color/textColorSecondary"
            tools:text="Izazov (ime) je završen" />

        <TextView
            android:id="@+id/tvChallengeCompletedMessage"
            style="@style/Dosis18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvChallengeCompleted"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/challenge_completed"
            android:gravity="center"
            android:textColor="@color/textColorPrimary"
            tools:text="Želje i pozdravi" />


</RelativeLayout>
